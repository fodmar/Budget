@{
    Layout = null;
}

@using System.Web.Optimization;
@using Budget.WebApp.Extensions;
@using Budget.WebApp.Models;
@using Budget.Resources;
@using Budget.WebApp.Utils;
@using System.Threading;
@model Budget.WebApp.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Text.LogIntoApplication</title>

    @Styles.Render("~/bundles/content/layout")
    @Scripts.Render("~/bundles/scripts/layout")

    @RequireJs.Require(@"app/login")
</head>
<body lang="@Thread.CurrentThread.CurrentCulture">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-5 login-form">
                <h2>@Text.LogIntoApplication</h2>

                @Bootstrap.FormForModel(FormOptions.Options(Text.SignIn, MVC.Login.ActionNames.Login, MVC.Login.Name))
            </div>
        </div>
    </div>
</body>
</html>
