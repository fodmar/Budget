@{
    Layout = null;
}

@using System.Web.Optimization;
@using Budget.WebApp.Extensions;
@using Budget.Resources;
@using Budget.WebApp.Utils;
@using System.Threading;
@model Budget.WebApp.Models.LoginModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Text.LogIntoApplication</title>

    @Styles.Render("~/bundles/content/layout")
    @Scripts.Render("~/bundles/scripts/layout")

    @RequireJs.Require(@"app/login")
</head>
<body lang="@Thread.CurrentThread.CurrentCulture">
    <div class="justify-center">
        <div class="login-form">
            <h2 class="login-title">@Text.LogIntoApplication</h2>
            @using (Html.BeginForm(MVC.Login.ActionNames.Login, MVC.Login.Name, FormMethod.Post, new { @class = "vertical" }))
            {
                @Bootstrap.EditorForModel()
                @Html.SubmitForm(Text.SignIn)
                @Html.ValidationSummary(true)
            }
        </div>
    </div>
</body>
</html>
